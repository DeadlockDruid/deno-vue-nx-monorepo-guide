{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "deno-app-3",
  "projectType": "application",
  "sourceRoot": "apps/backend/deno-app-3",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno task start",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno lint --config {projectRoot}/deno.json"
      },
      "inputs": [
        "default"
      ],
      "cache": true
    },
    "compile": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash ../shared-scripts/compile_deno.sh --workspace-import-map ../shared_import_map.json --project-import-map ./deno.json --output-dir ./dist --main-file ./main.ts",
        "cwd": "{projectRoot}"
      },
      "outputs": [
        "{projectRoot}/dist/deno-app"
      ],
      "inputs": [
        "production",
        "^production"
      ],
      "cache": true
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno test --config deno.json --coverage=coverage/ --permit-no-files",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "default"
      ],
      "cache": true
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash ../shared-scripts/deploy_deno.sh --resource-group mvpsso --web-app-name deno-app-3",
        "cwd": "{projectRoot}"
      },
      "inputs": [
        "production",
        "^production"
      ],
      "dependsOn": [
        "compile"
      ]
    }
  },
  "tags": [
    "scope:backend",
    "type:deno"
  ]
}
